<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText để nhập URL video (Nếu chọn từ URL) -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtVideoUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập URL video" />

        <Button
            android:id="@+id/btnPlayUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phát Video Từ URL" />

        <Button
            android:id="@+id/btnChooseVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn Video" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundGravity="center" />
    </LinearLayout>

    <!-- Button để chọn video từ MediaStore -->

    <!-- Button để phát video từ URL nhập vào -->

</RelativeLayout>