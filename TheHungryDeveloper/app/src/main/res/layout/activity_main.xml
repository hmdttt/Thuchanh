<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textSize="30dp"
        android:text="The Hungry Developer" />





    <androidx.cardview.widget.CardView
        android:id="@+id/crd_starter"
        android:layout_width="200dp"
        android:layout_height="165dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_title"
        android:layout_marginTop="60dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="136dp"
                app:srcCompat="@drawable/_04_starter" />

            <TextView
                android:id="@+id/txt_starter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Starter" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/crd_main_course"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/crd_starter"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:srcCompat="@drawable/_04_main" />

            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/txt_main_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Course" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>